{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": [
      "es2021",
      "dom"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "*": [
        "./node_modules/*"
      ],
      "src/*": [
        "./*"
      ],
      "green_dot": [
        "./index.ts"
      ],
      "green_dot/plugins": [
        "./src/plugins/index.ts"
      ]
    },
    "types": [
      "jest",
      "node",
      "express"
    ]
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "./src/templates/**/*",
    "./templates/**/*",
    "./src/generate/generateSDK/templates/**/*",
    "./src/generate/dbFolderGeneratedDefaults/**/*",
    "./src/generate/backendGeneratedDefaults/**/*",
    "./dist/**/*",
    "node_modules"
  ]
}