---
import { LinkButton, Code } from "@astrojs/starlight/components";
import TerminalDisplay from "./TerminalDisplay.astro";
import {
  ArrowRight,
  BookOpen,
  Rocket,
  Check,
  Zap,
  ShieldCheck,
  Laptop,
  Code as CodeIcon,
  Laptop2,
} from "lucide-astro";
---

<div
  class="w-full min-h-[60vh] flex flex-col md:flex-row items-center justify-center gap-8 px-4 py-12"
>
  <div class="w-full md:w-1/2 flex flex-col items-start justify-center gap-4">
    <h1 class="site-title text-4xl md:text-6xl text-accent-100 font-light">
      green_dot
    </h1>
    <p class="text-lg md:text-xl text-gray-600 dark:text-gray-300 font-light">
      Security and DX focused NodeJs backend framework
    </p>
    <div class="sl-flex actions gap-6">
      <LinkButton href="./guides/quickstart" icon="right-arrow">
        Quick Start
      </LinkButton>
      <LinkButton href="./guides/quickstart" variant="minimal" icon="external">
        Read the docs
      </LinkButton>
    </div>
  </div>
  <div class="w-full md:w-1/2 flex items-center justify-center">
    <div
      class="relative w-full max-w-lg aspect-[5/4.2] flex items-center justify-center"
    >
      <!-- BLUR BG  -->
      <div class="overlay bg-accent-200/30 rounded-full blur-3xl"></div>
      <!-- <Code lang="ts" code="npx green_dot@latest generate" /> -->
      <TerminalDisplay code="npx green_dot@latest generate" />
    </div>
  </div>
</div>

<style>
  @layer starlight.core {
    .siteLogo {
      border-radius: 50%;
      height: 22px;
      width: 22px;
      position: relative;
      background: #9cdaac;
      border: 2px solid #4b644b;
      top: 5px;
      left: 6px;
      display: inline-block;
    }
    .site-title {
      align-items: center;
      gap: var(--sl-nav-gap);
      font-size: var(--sl-text-h4);
      font-weight: 600;
      color: var(--sl-color-text-accent);
      text-decoration: none;
      white-space: nowrap;
      text-shadow: 0 0 5px #9be7ae;
    }
  }
</style>
