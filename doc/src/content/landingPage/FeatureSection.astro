---
import { Card, CardGrid, Code } from "@astrojs/starlight/components";
import * as lucideIcons from "lucide-astro";
// import { Code } from "astro-expressive-code/components";

interface Props {
  title: string;
  icon?: string;
  useLucideIcon?: boolean;
}

const { title, icon, useLucideIcon = false } = Astro.props;

// Get the Lucide icon component if an icon name is provided and useLucideIcon is true
const IconComponent =
  useLucideIcon && icon ? lucideIcons[icon as keyof typeof lucideIcons] : null;
---

<CardGrid stagger>
  <Card title="Back/Front Type-safe API & shared models" icon="seti:typescript">
    <Code
      title="TypeScript Interface Example"
      lang="ts"
      mark="typescript"
      code={`// typescript`}
    />
    ```ts title='COUCOU TITLE' frame="terminal" showLineNumbers twoslash diff Code
    block ```
  </Card>
  <Card title="Add new content" icon="add-document">
    Add Markdown or MDX files to `src/content/docs` to create new pages.
  </Card>
  <Card title="Configure your site" icon="setting">
    Edit your `sidebar` and other config in `astro.config.mjs`.
  </Card>
  <Card title="Read the docs" icon="open-book">
    Learn more in [the Starlight Docs](https://starlight.astro.build/).
  </Card>
</CardGrid>
