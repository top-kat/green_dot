    "version": "0.2.0",
    "configurations": [
        {
            "name": "START DEV BACKEND",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "env": {
                "NODE_ENV": "development",
                "IS_PENTEST_ENV": "true"
            },
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start:bangk-backend-dev"
            ]
        },
        {
            "name": "GENERATE SDK",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}/packages/core-backend/bin",
            "runtimeExecutable": "ts-node",
            "runtimeArgs": [
                "./generateSdk.ts"
            ]
        },
        {
            "name": "BUILD BACKEND",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}/apps/backend",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "build"
            ]
        },
        {
            "name": "START DEV BACKEND with distant DB",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "env": {
                "NODE_ENV": "development",
                "BANGK_DEV_MONGO_URL": "mongodb+srv://admin:d1VtgpVvoMEcMY9c@testdb.kz9iadf.mongodb.net/dev",
                "WEBSITE_DB_DEV_MONGO_URL": "mongodb+srv://admin:d1VtgpVvoMEcMY9c@testdb.kz9iadf.mongodb.net/websiteDev",
                "BANGK_ADMIN_DEV_MONGO_URL": "mongodb+srv://admin:d1VtgpVvoMEcMY9c@testdb.kz9iadf.mongodb.net/adminDev",
                "IS_CRON_SERVER": "true"
            },
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start:bangk-backend-dev"
            ]
        },
        {
            "name": "START PROD",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "env": {
                "NODE_ENV": "production",
                "IS_CRON_SERVER": "true"
            },
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start:bangk-backend-dev"
            ]
        },
        {
            "name": "START TEST BACKEND",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "env": {
                "NODE_ENV": "test",
            },
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start:bangk-backend-test"
            ]
        },
        {
            "name": "START TEST BACKEND  with distant DB",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "env": {
                "NODE_ENV": "test",
                "BANGK_TEST_MONGO_URL": "mongodb+srv://admin:d1VtgpVvoMEcMY9c@testdb.kz9iadf.mongodb.net/dev"
            },
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start:bangk-backend-test"
            ]
        },
        {
            "name": "DEBUG FRONT ICO DASHBOARD",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceRoot}/apps/ico-dashboard"
        },
        {
            "name": "Experimental :: START TEST BACKEND BUN",
            "type": "bun",
            "request": "launch",
            "program": "./testo.ts",
            "cwd": "${workspaceFolder}",
            "watchMode": false,
            "runtime": "bun",
        },
        {
            "name": "RUN UNIT TESTS",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/apps/backend",
            "env": {
                "NODE_ENV": "test"
            },
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "test"
            ]
        },
    ]
}